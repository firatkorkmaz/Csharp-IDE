        <TextBox Height="27" HorizontalAlignment="Left" Margin="112,22,0,0" Name="txtOutput" VerticalAlignment="Top" Width="960" Text=".\Program.exe" FontFamily="Calibri" FontSize="18" TextChanged="txtOutput_TextChanged" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="1183,22,0,0" Name="txtFramework" VerticalAlignment="Top" Width="40" FontFamily="Calibri" FontSize="18" Text="v4.0" />
        <Label Content="Output:" Height="33" HorizontalAlignment="Left" Margin="38,18,0,0" Name="label1" VerticalAlignment="Top" Width="69" FontFamily="Calibri" FontSize="18" />
        <Label Content="Framework:" Height="33" HorizontalAlignment="Left" Margin="1077,18,0,0" Name="label2" VerticalAlignment="Top" Width="102" FontFamily="Calibri" FontSize="18" />
        <TextBox Height="741" HorizontalAlignment="Left" Margin="38,62,0,0" Name="txtSource" VerticalAlignment="Top" Width="584" FontFamily="Calibri" FontSize="18" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" AutoWordSelection="True" AcceptsTab="True" AcceptsReturn="True" Text="using System;&#xD;&#xA;using System.IO;&#xD;&#xA;using System.Linq;&#xD;&#xA;using System.Collections.Generic;&#xD;&#xA;&#xD;&#xA;namespace Application{&#xD;&#xA;&#xD;&#xA;    class Program{&#xD;&#xA;&#xD;&#xA;        static void Main(string[] args){&#xD;&#xA;            &#xD;&#xA;            List&lt;Car&gt; MyCars = new List&lt;Car&gt;();&#xD;&#xA;            Car car1 = new Car(&quot;Mercedes&quot;, 8);&#xD;&#xA;            Car car2 = new Car(&quot;BMW&quot;, 6);&#xD;&#xA;            Car car3 = new Car(&quot;Audi&quot;, 10);&#xD;&#xA;&#xD;&#xA;            MyCars.Add(car1);&#xD;&#xA;            MyCars.Add(car2);&#xD;&#xA;            MyCars.Add(car3);&#xD;&#xA;            MyCars = MyCars.OrderByDescending(x =&gt; x.value).ToList();&#xD;&#xA;&#xD;&#xA;            foreach (var item in MyCars){&#xD;&#xA;                Console.WriteLine(item.brand + &quot;: &quot; + item.value);&#xD;&#xA;            }&#xD;&#xA;&#xD;&#xA;            Console.Write(&quot;\nPress any key to continue . . . &quot;);&#xD;&#xA;            Console.ReadKey();&#xD;&#xA;        }&#xD;&#xA;    }&#xD;&#xA;}" />
        <TextBox Height="66" HorizontalAlignment="Left" Margin="38,818,0,0" Name="txtStatus" VerticalAlignment="Top" Width="1076" TextChanged="txtStatus_TextChanged" />
        <Button Content="Compile" Height="28" HorizontalAlignment="Left" Margin="1132,818,0,0" Name="btnCompile" VerticalAlignment="Top" Width="92" FontFamily="Calibri" FontSize="18" Click="btnCompile_Click" />
        <Button Content="Exit" Height="28" HorizontalAlignment="Left" Margin="1132,856,0,0" Name="button1" VerticalAlignment="Top" Width="92" FontFamily="Calibri" FontSize="18" Click="button1_Click" />
        <TextBox Height="741" Margin="640,62,0,0" Name="classData" VerticalAlignment="Top" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" FontFamily="Calibri" FontSize="18" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" TextChanged="classData_TextChanged" Text="using System;&#xD;&#xA;using System.IO;&#xD;&#xA;using System.Linq;&#xD;&#xA;using System.Collections.Generic;&#xD;&#xA;&#xD;&#xA;namespace Application{&#xD;&#xA;&#xD;&#xA;    class Car{&#xD;&#xA;&#xD;&#xA;        public string brand;&#xD;&#xA;        public int value;&#xD;&#xA;&#xD;&#xA;        public Car(string Brand, int Value){&#xD;&#xA;&#xD;&#xA;            brand = Brand;&#xD;&#xA;            value = Value;&#xD;&#xA;        }&#xD;&#xA;    }&#xD;&#xA;}" HorizontalAlignment="Left" Width="584" />
    </Grid>
</Window>
